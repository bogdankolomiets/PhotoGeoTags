<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <EditText
        android:id="@+id/txtPhotoURL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/text_photo_url_hint"/>
    <Button
        android:id="@+id/btnPhotoURLSearch"
        android:layout_width="match_parent"
        android:layout_marginBottom="16dp"
        android:layout_height="wrap_content"
        android:text="@string/text_btn_photo_url"/>
    <Button
        android:id="@+id/btnPhotoGallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/text_btn_photo_gallery"/>

    <ImageView
        android:id="@+id/imgSelected"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginBottom="16dp"
        android:layout_gravity="center"
        android:scaleType="fitXY"/>

    <Button
        android:id="@+id/btnAddPhotoToMap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="add to map"/>

</LinearLayout>